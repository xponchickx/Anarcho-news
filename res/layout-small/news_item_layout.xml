<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="70dip"
    android:background="@drawable/var_2"
    android:orientation="horizontal"
    tools:ignore="InefficientWeight,SmallSp" >

        <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="70dp" >

        <ImageView
            android:id="@+id/image_border"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/news_icon"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/news_icon"
            android:scaleType="centerCrop"
            android:src="@drawable/unloaded" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/news_text"
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="15dip"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:contentDescription="@string/date"
                android:scaleType="centerCrop"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/pub_date_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:contentDescription="@string/date"
                android:scaleType="centerCrop"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/pub_time_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:contentDescription="@string/views"
                android:scaleType="centerCrop"
                android:src="@drawable/views" />

            <TextView
                android:id="@+id/views_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>